*{font-family:lora,serif;color:#000}.main{display:flex;flex-wrap:wrap}.main__content{flex:1;flex-basis:300px;margin:64px;margin-left:0}.site-logo{font-size:40px;margin-bottom:16px}.site-logo>a{text-decoration:none}.hero{text-align:left;align-self:flex-start;flex-basis:400px;margin:64px;position:sticky;position:-webkit-sticky;top:64px}.hero__subtitle{font-size:24px;margin-bottom:32px}.hero__copy-section{font-size:12px;margin-bottom:16px}.hero__copy-section--bottom{margin-bottom:32px}.hero__menu-link{text-transform:lowercase;margin-bottom:8px}.button--tertiary{font-weight:700;font-style:italic;text-decoration:none;font-size:12px}@media screen and (max-width:900px){.site-logo{font-size:24px}.hero{flex-basis:100vw;margin:32px;position:relative;top:0}.hero__subtitle{font-size:18px}.hero__copy-section{font-size:10px}.main__content{margin:32px;margin-left:32px}.button--tertiary{font-size:10px}}