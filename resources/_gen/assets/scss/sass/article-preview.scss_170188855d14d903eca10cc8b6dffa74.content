.article-preview{max-width:300px;margin-bottom:32px}.article-preview__container{display:grid;grid-template-columns:repeat(auto-fill,300px);column-gap:32px;row-gap:32px}.article-preview__hero-image{margin-bottom:16px}.article-preview__title{text-decoration:none;margin-bottom:8px}.article-preview__title:hover{text-decoration:underline}@media screen and (max-width:900px){.article-preview{max-width:100%}.article-preview__container{display:flex;flex-direction:column}}